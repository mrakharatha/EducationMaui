<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.FlexDemo"
             Title="FlexDemo">
    <FlexLayout Direction="Column">
        <Label Text="HEADER" BackgroundColor="Aqua" HorizontalTextAlignment="Center "></Label>
        <FlexLayout Direction="Row" FlexLayout.Grow="1">
            <BoxView FlexLayout.Basis="50" Color="Blue" />
            <Label Text="CONTENT" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="18" BackgroundColor="Gray" FlexLayout.Grow="1"></Label>
            <BoxView FlexLayout.Basis="50" Color="Green"></BoxView>
        </FlexLayout>
        <Label Text="FOOTER" BackgroundColor="Pink" HorizontalTextAlignment="Center "></Label>
    </FlexLayout>
</ContentPage>